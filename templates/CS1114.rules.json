{
  "style": {
    "indentation": {
      "use_spaces": true,
      "spaces_per_indent": 4
    },
    "max_line_length": 80,
    "javadoc_required": true,
    "one_public_class_per_file": true,
    "require_override": true
  },
  "testing": {
    "test_methods_prefix": "test",
    "require_assert_equals_delta": true,
    "annotation_required": false
  }
}

